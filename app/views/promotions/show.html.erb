<h1> View Promotions
  <%= link_to "Edit", edit_promotion_path(@promotion), class: "btn btn-outline-warning" %> |
  <%= button_to "Delete", @promotion, method: :delete, class: "btn btn-outline-danger" %>
  <span class="float-right">
    <%= link_to "Back to promotions", promotions_path, class: "btn btn-outline-secondary" %>
  </span>
</h1>

<div class="table-responsive">
  <table class="table mt-3" aria-label="table for Promotions">
    <tr>
      <td>Code</td>
      <td><%= @promotion.code %></td>
    </tr>
    <tr>
      <td>From</td>
      <td><%= @promotion.from %></td>
    </tr>
    <tr>
      <td>To</td>
      <td><%= @promotion.to %></td>
    </tr>
    <tr>
      <td>Pizza size</td>
      <td><%= @promotion.pizza_size_id %></td>
    </tr>
    <tr>
      <td>Pizza</td>
      <td><%= @promotion.pizza_id %></td>
    </tr>
  </table>
</div>

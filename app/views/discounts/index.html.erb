<h1>
  Discounts
  <%= link_to "New discount", new_discount_path, class: "btn btn-outline-primary" %>
</h1>

<div class="table-responsive">
  <table class="table table-hover" aria-label="table for Discounts">
    <thead>
      <tr>
        <th scope="col">Code</th>
        <th scope="col">Percentage</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <% @discounts.each do |discount| %>
        <tr>
          <td><%= discount.code %></td>
          <td><%= discount.percentage %></td>
          <td>
            <%= link_to "Edit", edit_discount_path(@discount), class: "btn btn-sm btn-outline-warning" %>
            <%= button_to "Delete", @discount, method: :delete, data: [confirm: gettext("Are you sure?")], class: "btn btn-sm btn-outline-danger" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<h1>
  Pizzas
  <%= link_to "New pizza", new_pizza_path, class: "btn btn-outline-primary" %>
</h1>

<div class="table-responsive">
  <table class="table table-hover" aria-label="table for Pizzas">
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Price</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <% @pizzas.each do |pizza| %>
        <tr>
          <td><%= pizza.name %></td>
          <td><%= number_to_currency(pizza.price, format: '%n%u', unit: "â‚¬") %></td>
          <td>
            <%= link_to "Edit", edit_pizza_path(pizza), class: "btn btn-sm btn-outline-warning" %>
            <%= button_to "Delete", pizza, method: :delete, form_class: "form-inline", data: [confirm: "Are you sure?"], class: "btn btn-sm btn-outline-danger" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

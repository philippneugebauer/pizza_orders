<h1>
  Pizza sizes
  <%= link_to "New pizza size", new_pizza_size_path, class: "btn btn-outline-primary" %>
</h1>

<div class="table-responsive">
  <table class="table table-hover" aria-label="table for Pizza sizes">
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Multiplier</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <% @pizza_sizes.each do |pizza_size| %>
        <tr>
          <td><%= pizza_size.name %></td>
          <td><%= pizza_size.multiplier %></td>
          <td>
            <%= link_to "Edit", edit_pizza_size_path(@pizza_size), class: "btn btn-sm btn-outline-warning" %>
            <%= button_to "Delete", @pizza_size, method: :delete, data: [confirm: gettext("Are you sure?")], class: "btn btn-sm btn-outline-danger" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

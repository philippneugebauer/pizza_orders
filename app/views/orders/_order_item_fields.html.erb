<div class="wrapper-div">
  <div class="card mb-3">
    <div class="card-body">
      <h2>Pizza
        <%= link_to_remove_nested(form, fields_wrapper_selector: '.wrapper-div', link_classes: "btn btn-outline-danger btn-sm") %>
      </h2>
      <div class="mb-3">
        <%= form.label :name, class: "form-label" %>
        <%= form.text_field :name, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= form.label :size, class: "form-label" %>
        <%= form.text_area :size, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= form.label :extras, class: "form-label" %>
        <%= form.text_field :extras, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= form.label :omited, class: "form-label" %>
        <%= form.text_field :omited, class: "form-control" %>
      </div>
    </div>
  </div>
</div>